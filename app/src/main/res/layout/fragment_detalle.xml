<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentDetalle">

    <ImageView
        android:id="@+id/imgDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.154"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txZapatillaDetalle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDetalle" />

    <TextView
        android:id="@+id/txPrecioDetalle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txZapatillaDetalle"
        app:layout_constraintStart_toStartOf="@+id/txZapatillaDetalle"
        app:layout_constraintTop_toBottomOf="@+id/txZapatillaDetalle" />

    <Button
        android:id="@+id/btnComprar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Comprar"
        app:layout_constraintEnd_toEndOf="@+id/txPrecioDetalle"
        app:layout_constraintStart_toStartOf="@+id/txPrecioDetalle"
        app:layout_constraintTop_toBottomOf="@+id/txPrecioDetalle"
        tools:textSize="24sp" />
</androidx.constraintlayout.widget.ConstraintLayout>